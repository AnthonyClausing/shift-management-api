{
  "name": "shift-management-api",
  "version": "1.0.0",
  "description": "",
  "main": "./dist",
  "scripts": {
    "start": "nodemon",
    "build": "tsc",
    "migrate": "knex migrate:latest",
    "unmigrate": "knex migrate:rollback",
    "seed": "knex seed:run",
    "test": "ts-node ./lib/server.ts",
    "dev": "tsc && nodemon ./dist/lib/server.js",
    "prod": "tsc && nodemon ./dist/lib/server.js",
    "lint": "eslint ./src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix ./src/**/*.{ts,tsx,js,jsx}",
    "prettier": "prettier --write ./src"
  },
  "keywords": [
    "Nodejs",
    "typescript",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnthonyClausing/shift-management-api.git"
  },
  "author": "Anthony Clausing",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AnthonyClausing/shift-management-api/issues"
  },
  "homepage": "https://github.com/AnthonyClausing/shift-management-api#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.95.1",
    "passport": "^0.4.1",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.12",
    "@types/knex": "^0.14.26",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "2.3.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
